{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug",
			"envFile": "${workspaceFolder}/.env",
			"program": "${workspaceRoot}/bin/app.js",
			"args": [
				"--config-toml-file=${workspaceRoot}/messenger-bridge.toml",
				"--config-toml-file=${workspaceRoot}/messenger-bridge-devel.toml",
				"--config-env"
			],
			"runtimeArgs": [
				"--require",
				"source-map-support/register",
				"--inspect=9229",
			],
			"request": "launch",
			"preLaunchTask": "build",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node",
		},
		{
			"name": "Attach",
			"port": 9229,
			"request": "attach",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node",
			"sourceMaps": true,
			"remoteRoot": "/usr/local/zxteamorg/messenger-bridge"
		},
	]
}
